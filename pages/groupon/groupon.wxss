/* pages/groupon/groupon.wxss */
.head-area{
  position: sticky;
  top: 0rpx;
  left: 0rpx;
  right: 0rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 10rpx;
  background: white;
}

.head-left-area{
  flex-shrink: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.head-center-area{
  flex-shrink: 0;
  flex-grow: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 10rpx;
  border-radius: 15rpx;
  border-width: 1rpx;
  border-color: #ebebeb;
  border-style: solid;
}

.head-right-area{
  flex-shrink: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.search-input{
  flex-grow: 1;
}

.groupon-list{
  display: flex;
  flex-direction: column;
  /* margin-top: 120rpx; */
}

.groupon-goods-item{
  display: flex;
  flex-direction: row;
  padding: 10rpx 20rpx;
}

.groupon-goods-item-image{
  flex-shrink: 0;
  width: 32vw;
  height: 300rpx;
}

.groupon-goods-item-info{
  margin-left: 10rpx;
  padding-bottom: 10rpx;
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  border-style: none none solid none;
  border-width: 1rpx;
  border-color: #ebebeb;
}

.groupon-goods-item-info-content{
  flex-grow: 1;
  flex-shrink: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.bottom-space{
  margin-bottom: 10rpx;
}

.goods-name{
  font-size: 36rpx;
  font-weight: 600;
  color: #1c2438;
}

.goods-factory{
  font-size: 28rpx;
  color: #495A80;
}

.goods-specification{
  font-size: 28rpx;
  color: #495A80;
}

.goods-unit{
  font-size: 28rpx;
  color: #495A80;
}

.goods-approval{
  font-size: 28rpx;
  color: #495A80;
}

.goods-differCount{
  font-size: 28rpx;
  color: red;
}

.goods-currentCount{
  font-size: 28rpx;
  color: red;
}

.goods-groupon-price{
  font-size: 32rpx;
  font-weight: 600;
  color: red;
  flex-grow: 0;
}

.goods-original-price{
  text-decoration: line-through;
  font-size: 28rpx;
}

.goods-join-button{
  padding: 10rpx 25rpx;
  background: red;
  color: white;
  font-size: 30rpx;
  border-radius: 8rpx;
  flex-grow: 0;
}