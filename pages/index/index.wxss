/**index.wxss**/
.select-item-area{
  width: 100%;
  height: 80rpx;
}

.hor{
  height: 100%;
  display: flex;
  flex-direction: row;
}

.select-item{
  flex-shrink: 0;
}

.item-hor{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.item-ver{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.select-item-title{
  padding: 0rpx 30rpx;
  margin: 10rpx 0rpx;
  font-size: 28rpx;
}

.select-item-title-split{
  border-style: none solid none none;
  border-width: 2rpx;
  border-color: lightgray;
}

.banner{
  width: 100%;
  height: 300rpx;
}

.banner-item{
  width: 100%;
  height: 100%;
}

.section-title-area{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 10rpx;
}

.section-title-detail-area{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  flex-grow: 1;
}

.section-title-detail-info{
  font-size: 28rpx;
  color: #778899;
}

.new-customer-action-area{
  width: 100%;
  height: 300rpx;
}

.new-customer-action-item{
  /* vw 相对屏幕宽度 100==100% 30==30% */
  width: 33.3333vw; 
  height: 100%;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.new-customer-action-package{
  width: 100%;
  height: 100%;
}

.new-customer-action-goods{
  width: 96%;
  height: 96%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.new-customer-action-goods-image{
  width: 80%;
  height: 200rpx;
  flex-shrink: 0;
}

.new-customer-action-goods-name{
  font-size: 30rpx;
  color: #778899;
}

.new-customer-action-goods-price{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.new-customer-action-goods-price-logo{
  background: red;
  color: white;
  font-size: 24rpx;
  border-radius: 8rpx;
  padding: 5rpx;
}

.new-customer-action-goods-price-value{
  color: #ee2c2c;
  font-size: 28rpx;
}

.groupon-goods-item{
  display: flex;
  flex-direction: row;
  padding: 10rpx 20rpx;
}

.groupon-goods-item-image{
  flex-shrink: 0;
  width: 32vw;
  height: 300rpx;
}

.groupon-goods-item-info{
  margin-left: 10rpx;
  display: flex;
  flex-direction: column;
  flex-grow: 1;
}

.groupon-goods-item-info-content{
  flex-grow: 1;
  flex-shrink: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.bottom-space{
  margin-bottom: 10rpx;
}

.goods-name{
  font-size: 36rpx;
  font-weight: 600;
  color: #1c2438;
}

.goods-factory{
  font-size: 28rpx;
  color: #495A80;
}

.goods-specification{
  font-size: 28rpx;
  color: #495A80;
}

.goods-unit{
  font-size: 28rpx;
  color: #495A80;
}

.goods-approval{
  font-size: 28rpx;
  color: #495A80;
}

.goods-differCount{
  font-size: 28rpx;
  color: red;
}

.goods-currentCount{
  font-size: 28rpx;
  color: red;
}

.goods-groupon-price{
  font-size: 32rpx;
  font-weight: 600;
  color: red;
  flex-grow: 0;
}

.goods-original-price{
  text-decoration: line-through;
  font-size: 28rpx;
}

.goods-join-button{
  padding: 10rpx 25rpx;
  background: red;
  color: white;
  font-size: 30rpx;
  border-radius: 8rpx;
}