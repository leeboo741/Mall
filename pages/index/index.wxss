/**index.wxss**/
.select-item-area{
  width: 100%;
  height: 80rpx;
}

.hor{
  height: 80rpx;
  display: flex;
  flex-direction: row;
}

.select-item{
  flex-shrink: 0;
}

.item-hor{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.item-ver{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.select-item-title{
  padding: 0rpx 30rpx;
  margin: 10rpx 0rpx;
  font-size: 28rpx;
  border-style: none solid none none;
  border-width: 2rpx;
  border-color: lightgray;
}

.banner{
  width: 100%;
  height: 300rpx;
}

.banner-item{
  width: 100%;
  height: 100%;
}
